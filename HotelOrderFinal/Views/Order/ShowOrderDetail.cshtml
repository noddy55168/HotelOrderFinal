                    <span asp-validation-for="@Model.orderID" class="text-danger"></span>
                </div>
                    <div class="form-group">
                        <label asp-for="@Model.RoomClassName" class="control-label">房型名稱</label>
                        <input asp-for="@Model.RoomClassName" class="form-control" disabled />
                        <span asp-validation-for="@Model.RoomClassName" class="text-danger"></span>
                    </div>
