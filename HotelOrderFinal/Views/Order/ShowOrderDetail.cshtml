                <div class="form-group">
                    <label asp-for="@Model.PaymentDate" class="control-label"></label>
                    <input asp-for="@Model.PaymentDate" class="form-control" disabled />
                    <span asp-validation-for="@Model.PaymentDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.PaymentPrice" class="control-label"></label>
                    <input asp-for="@Model.PaymentPrice" class="form-control" disabled />
                    <span asp-validation-for="@Model.PaymentPrice" class="text-danger"></span>
