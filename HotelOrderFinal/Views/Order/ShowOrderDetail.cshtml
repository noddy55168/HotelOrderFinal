                    <input asp-for="@Model.OrderDetailRemark" class="form-control" disabled />
                    <span asp-validation-for="@Model.OrderDetailRemark" class="text-danger"></span>
                </div>
       
        </div>
                
        <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">房間照片</label>
              
                    <img id="photo1Preview" class="mythumbnail" src="~/image/room/@Model.RoomClassPhoto1" width="240" height="180">
                    <span asp-validation-for="RoomClassPhoto1" class="text-danger"></span>
