<!-- Modal -->


<div class="modal fade" id="myAccountModal" tabindex="-1" role="dialog" aria-labelledby="myAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myAccountModalLabel">我的帳戶</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul class="nav nav-tabs" id="myAccountTabs" role="tablist">
                    @*<li class="nav-item" >*@
                    <li data-v-77690bc2="" class="athTabpage__tab active">
                        <a class="nav-link" id="loginTab" data-toggle="tab" href="#login" role="tab" aria-controls="login" aria-selected="true">會員登入</a>
                    </li>
                    @*<li class="nav-item">*@
                    <li data-v-77690bc2="" class="athTabpage__tab">
                        <a class="nav-link" id="createTab" data-toggle="tab" href="#create" role="tab" aria-controls="create" aria-selected="false">會員註冊</a>
                    </li>
                </ul>
                <div class="tab-content" id="myAccountTabContent">
                    <div class="tab-pane active" id="login" role="tabpanel" aria-labelledby="loginTab">
                        @await Html.PartialAsync("~/Views/Member/Login.cshtml")           
                    </div>
                    <div class="tab-pane" id="create" role="tabpanel" aria-labelledby="createTab">
                        @await Html.PartialAsync("~/Views/Member/Create.cshtml")            
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
