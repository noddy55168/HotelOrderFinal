@using (Html.BeginForm("Login", "Member", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
    @*    <h4>請輸入帳號與密碼</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            帳號 (註冊時的手機)
            <div class="col-md-10">
                @Html.TextBox("MemberPhone", null, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            密碼
            <div class="col-md-10">
                @Html.TextBox("MemberPassword", "", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-0 col-md-10">
                <input type="submit" value="登入" class="btn btn-default" />
                @using (Html.BeginForm("Login", "Member",  new { id = "my-form-id" }))
                {
                <button type="button" class="btn btn-primary" onclick="demoLogin()">Demo</button>
                }
                @ViewBag.Message
            </div>
        </div>
    </div>
@section Scripts {
    <script type="text/javascript">
        function demoLogin() {
            // 取得表單元素和欄位元素
            var form = document.getElementById("my-form-id");
            var phoneField = document.getElementById("MemberPhone");
            var passwordField = document.getElementById("MemberPassword");

            // 設定 Demo 帳號密碼
            phoneField.value = "0936582783";
            passwordField.value = "64V7VpFc";

            // 提交表單
            form.submit();
        }
    </script>
}

