@{
    ViewData["Title"] = "reset_Password";

}

<style>
    .linkaFormat {
        text-decoration: none;
        color: inherit
    }
</style>


<section class="breadcrumb_area">
    <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background=""></div>
    <div class="container">
        <div class="page-cover text-center">
            <h2 class="page-cover-tittle">About Us</h2>
            <ol class="breadcrumb">
                <li><a href="index.html">Home</a></li>
                <li class="active">About</li>
            </ol>
        </div>
    </div>
</section>
<aside>

</aside>

<style>
    .wrapper {
        width: 80%; /* 設定容器寬度 */
        margin: 0 auto; /* 將容器置中對齊 */
    }
</style>
<div class="wrapper ">
    <h1>會員密碼修改</h1>
    <h4>RoomMember</h4>
    <hr />
    <div class="row">
        @*======================================================================*@
        <div class="col-xs-12 col-md-3">
            <div class="athMember__menu pb-sm-3">
                <div class="athMember__user pb-20">
                    <div class="athMember__userInfo">
                    </div>
                </div>
                <div class="container" style="margin-top:15px">
                    <div>
                        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                @*<li class="breadcrumb-item "><a class="fontClean" href="">忘記密碼</a></li>*@
                                @*<li class="breadcrumb-item ">重設密碼</li>*@
                            </ol>
                        </nav>
                    </div>
                    @*<p><h6>｜重設密碼</h6></p>*@
                    <form asp-action="doResetPwd" id="reset_form">
                        <input asp-for="MemberId" type="hidden" value="@Model.MemberId" />
                        <div>
                            <br />
                            <p>請重新設定您的密碼，完成後重新登入</p>
                            <p>新的密碼: <input asp-for="MemberPassword"></p>
                            <p>確認密碼: <input></p>
                            <p><button id="check" type="submit" class="btn btn-outline-success btn-sm">確認送出</button></p>
                        </div>
                    </form>
                </div>
                <script>
                    const form = document.querySelector('#reset_form');
                    form.addEventListener('submit', async (event) => {
                        event.preventDefault();
                        const response = await fetch('@Url.ActionLink("doResetPwd")', {
                            method: 'POST',
                            body: new FormData(form)
                        });

                        const datas = await response.json();
                        if (datas.success === "true") {
                            alert(datas.message);
                            window.location.href = '@Url.Action("Index", "Home")';
                        }
                        if (datas.success === "false") {
                            alert(datas.message);
                            window.close();
                        }
                    });
                </script>
            </div>
        </div>
    </div>
</div>