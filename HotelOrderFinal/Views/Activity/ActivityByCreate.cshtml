@model IEnumerable<HotelOrderFinal.Models.Activity>

@{
    ViewData["Title"] = "ActivityByCreate";
}
<link rel="stylesheet" href="~/css/ForAdminTable.css">
<style>

    .table td {
        white-space: nowrap; 
        overflow: hidden; 
        text-overflow: ellipsis; 
        overflow: hidden;
        white-space: normal;
            
    }
</style>
<section class="breadcrumb_area">
    <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background=""></div>
    <div class="container">
        <div class="page-cover text-center">
            <h2 class="page-cover-tittle">後台管理系統：活動管理</h2>
        </div>
    </div>
</section>
<div class="Adminwrapper">
<div class="row">
<div class="col-xs-12 col-md-2">
    <div class=" ">
        <div class=" ">
            <div class="">
                @{
                    var AdminId = Context.Session.GetString("AdminId");
                }

            </div>
        </div>
        <div class="">
            <h2 style="text-align: center">
                @Html.ActionLink(AdminId, "List", "Admin")
            </h2>
            <ul class="list" style="list-style: none; padding: 0;">

                <!--改成手風琴下拉式-->
                <li>
                    @Html.ActionLink("會員管理", "List", "MemberMange", null, new { @class = "nav-link Adminbutton  d-flex justify-content-center" })
                </li>
                <li>
                    @Html.ActionLink("房型管理", "AdminRoom", "Room", null, new { @class = "nav-link Adminbutton  d-flex justify-content-center" })
                </li>
                <li>
                    @Html.ActionLink("活動管理", "ActivityByCreate", "Activity", null, new { @class = "nav-link Adminbutton  d-flex justify-content-center" })
                </li>
                <li>
                    @Html.ActionLink("訂房管理", "EditPassword", "Member", null, new { @class = "nav-link Adminbutton  d-flex justify-content-center" })
                </li>
                <li>
                    @Html.ActionLink("飯店一覽管理", "ListView", "HotelIndustry", null, new { @class = "nav-link Adminbutton  d-flex justify-content-center" })
                </li>
                <li>
                    @Html.ActionLink("優惠折扣管理", "List", "Discount", null, new { @class = "nav-link Adminbutton  d-flex justify-content-center" })
                </li>
                <li>
                    @Html.ActionLink("評論管理", "ListByAdmin", "Comment", null, new { @class = "nav-link Adminbutton  d-flex justify-content-center" })
                </li>
            </ul>
        </div>
    </div>
</div>
        <div id="selectedItemContent" class="col-xs-12 col-md-10 ">
            <!-- 這裡會顯示點選的項目的內容 -->
@*<h1>活動管理</h1>*@
<p>
    @using (Html.BeginForm())
    {
        @:關鍵字 @Html.TextBox("txtKeyword") <input type="submit" value="查詢">
    }
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                編號
                @*@Html.DisplayNameFor(Model => Model.ActivityId)*@
            </th>
            <th>
                活動名稱
                @*@Html.DisplayNameFor(model => model.ActivityName)*@
            </th>
            <th>
                活動照片
                @*@Html.DisplayNameFor(model => model.ActivityImage)*@
            </th>
            <th>
                活動詳細
                @*@Html.DisplayNameFor(model => model.ActivityDirections)*@
            </th>
            <th>
                活動時間
                @*@Html.DisplayNameFor(model => model.ActivityTime)*@
            </th>
            <th>
                活動地點
                @*@Html.DisplayNameFor(model => model.ActivityPlace)*@
            </th>
            <th>
                活動人數
                @*@Html.DisplayNameFor(model => model.ActivityPeople)*@
            </th>
            <th>
                活動費用
                @*@Html.DisplayNameFor(model => model.ActivityCost)*@
            </th>
            <th>
                <a asp-action="Create" class="btn btn-info">新增活動</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
@foreach (var item in Model) {            
            count++;
            <tr>  
           <td>
               @count
           </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityName)
            </td>
            <td>
             <img src="~/image/@item.ActivityImage" width="160" height="120" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityDirections)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityPlace)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityPeople)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityCost)
            </td>           
                <td>
                        @Html.ActionLink("修改", "Edit", new {id=item.ActivityId},new { @class="btn btn-success" }) 
                        @Html.ActionLink("刪除", "Delete","Activity", new {  id=item.ActivityId },new { @class="btn btn-danger", onclick="return confirm('確定要刪除嗎?')"})                                               
                </td>      
        </tr>
}
        }
    </tbody>
</table>
</div>
</div>
</div>