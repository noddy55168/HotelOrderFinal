                <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomClassId" class="control-label">房型編號</label>
                <input asp-for="RoomClassId" class="form-control" readonly />
                <span asp-validation-for="RoomClassId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomClassName" class="control-label">房型名稱</label>
                <input asp-for="RoomClassName" class="form-control" />
                <span asp-validation-for="RoomClassName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomClassDetail" class="control-label">詳細介紹</label>
                <textarea asp-for="RoomClassDetail" class="form-control" cols="40" rows="5"></textarea>
                <span asp-validation-for="RoomClassDetail" class="text-danger"></span>
            </div>
                    <div class="form-group">
                        <label asp-for="WeekdayPrice" class="control-label">平日價格</label>
                        <input asp-for="WeekdayPrice" class="form-control" />
