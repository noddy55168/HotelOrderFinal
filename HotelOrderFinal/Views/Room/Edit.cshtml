</div>

<div class="text-center">
    <a asp-action="AdminRoom" class="btn btn-secondary">回到列表</a>
</div>

<script>
        // 監聽上傳檔案的變動
        document.getElementById("photo1Input").addEventListener("change", function (event) {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById("photo1Preview").src = e.target.result; // 更新圖片預覽的 src
            };
            reader.readAsDataURL(event.target.files[0]);
        });
    // 監聽上傳檔案的變動
    document.getElementById("photo2Input").addEventListener("change", function (event) {
        var reader = new FileReader();
        reader.onload = function (e) {
            document.getElementById("photo2Preview").src = e.target.result; // 更新圖片預覽的 src
        };
        reader.readAsDataURL(event.target.files[0]);
    });
    // 監聽上傳檔案的變動
    document.getElementById("photo3Input").addEventListener("change", function (event) {
        var reader = new FileReader();
        reader.onload = function (e) {
            document.getElementById("photo3Preview").src = e.target.result; // 更新圖片預覽的 src
        };
        reader.readAsDataURL(event.target.files[0]);
    });
</script>
